    "###  <font color=blue>This short code generates a list of numbers that are divisible by 2 from a given list.</font>"
   ]
  },
   {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {
    "collapsed": true
   },
   "outputs": [],
   "source": [
    "numbers = [1,2,3,4,5]\n",
    "    global newlist\n", 
    "    for x in numbers:\n",
    "        if x%2 == 0:\n",
    "        newlist = [x/2 for x in numbers]\n",
    "    print(newlist)"
    ]}